<div class="request-container">
<h1>My viewings</h1>
<p>Show calendar</p>

<% @requests.each do |request| %>
  <div class="request">

    <div class="request-status">
      <%= request.status %>
    </div>

    <div class="request-price"> <%= request.viewing.room.flat.monthly_price %> </div>

    <div class="request-body">
      <h3><%= request.viewing.room.flat.title %></h3>
      <p><%= request.viewing.room.flat.neighborhood %></p>
      <p><%= request.viewing.room.flat.address %></p>
    </div>

    <div>
      <p>Send Message</p>
    </div>

    <div>
      <p>Cancel</p>
    </div>

  </div>
<% end %>
</div>
