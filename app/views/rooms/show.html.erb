<div class="container">
  <div class="room-banner", style="background-image:
  url('<%= cl_image_path @room_photo, crop: :fill %>')">
  <div class="room-price">
    <p><%= @room.flat.monthly_price%>â‚¬/m</p>
  </div>
  <div class="room-title-background"></div>
  <div class="room-title">
    <h2> <b>Title:</b> <%= @room.flat.title %> </h2>
    <p> <b>District:</b> <%= @room.flat.neighborhood%>, <%= @room.flat.address%> </p>
  </div>
</div>
<div class="interests text-center">
  <h3> There are <%= @room.flat.users.length %> in this flat! </h3>
  <% @room.flat.users.each do |user| %>
  <%= user %>
  <% end %>
</div>
<div class="col-xs-12 col-sm-8">
  <% @room.flat.users.each do |user| %>
  <div class="row">
    <%= cl_image_tag user.facebook_picture_url %>
    <%= user.first_name %>
  </div>
  <% end %>
  <div class="room-description">
    <h4>About the flat</h4>
    <%= @room.flat.description%>
    <%= "Deposit: #{@room.deposit}#{@room.currency}" if @room.deposit %>
    <%= "Minimum Stay: #{@room.minimum_stay} days" if @room.minimum_stay %>
    <%= "Preferred minimum age: #{@room.preferred_minimum_age} years old" if @room.preferred_min_age %>
    <%= "Preferred maximum age: #{@room.preferred_maximum_age} years old" if @room.preferred_max_age %>
    <%= "Preferred gender: #{@room.preferred_gender}" if @room.preferred_gender %>
    <%= "Includes parking" if @room.has_parking == true %>
    <%= "Allows students" if @room.allow_students == true %>
    <%= "Allows pets" if @room.allow_pets == true %>
    <%= "Allows smokers" if @room.allow_smokers == true %>
    <%= "Bills included" if @room.bills_included == true %>
    <%= "Couples allowed" if @room.couples_allowed == true %>
    <%= "Ensuite included" if @room.ensuite == true %>
    <%= "Wheelchair accessible" if @room.accessible == true %>
    <%= "Wheelchair accessible" if @room.accessible == true %>
  </div>
  <ul class="room-amenities list-inline">
    <% @room.amenities.each do |amenitie| %>
      <li><%= amenitie %></li>
    <% end %>
  </ul>
</div>
<div class="col-xs-12 col-sm-4 flat-form">
  <h3>Pick a meeting date</h3>
  <%= render 'form' %>
</div>
</div>
<div id="show-map"></div>

<% content_for(:after_js) do %>
<%= javascript_tag do %>

var handler = Gmaps.build('Google');
handler.buildMap({ internal: { id: 'show-map' } }, function() {
markers = handler.addMarkers(<%= raw @hash.to_json %>);
handler.bounds.extendWith(markers);
handler.fitMapToBounds();
if (markers.length == 0) {
handler.getMap().setZoom(2);
} else if (markers.length == 1) {
handler.getMap().setZoom(14);
}
});
<% end %>
<% end %>
